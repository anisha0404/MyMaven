pipeline{
tools{
maven 'Maven'
}
stages {
stage('Checkout'){
steps{
git branch:'master',url:'https://github.com/anisha0404/MyMaven.git'
}
}
stage('build'){
steps{
sh 'mvn clean package'
}
}
stage('Test'){
steps{
sh 'mvn test'
}
}
stage('Run Application')
{
steps{
sh 'java -jar target/MyMavenApp-1.0-SNAPSHOT.jar'
}
}
}
post {
success{
echo 'Build and deployment successful!'
}
failure {
echo 'build failure'
}
}
}

